{
	"name": "Devcontainer",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/LinuxKernelSbomGenerator,type=bind",
	"workspaceFolder": "/workspace/LinuxKernelSbomGenerator",
	"build": {
		"context": ".",
		"dockerfile": "./Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff"
			]
		}
	},
	"mounts": [
		"source=${env:HOME}/.gitconfig,target=/home/ubuntu/.gitconfig,type=bind,consistency=cached"
	],
	"postCreateCommand": ".devcontainer/post_create.sh"
}
