{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: sbom",
            "type": "debugpy",
            "request": "launch",
            "program": "src/sbom.py",
            "console": "integratedTerminal",
            "args": [
                "--src-tree", "../linux",
                "--output-tree", "../linux/kernel-build",
                "--root-output-in-tree", "vmlinux",
                "--output", "sbom.spdx.json",
                "--debug", "1"
            ]
        }
    ]
}
