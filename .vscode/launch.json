{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: sbom",
            "type": "debugpy",
            "request": "launch",
            "program": "sbom/sbom.py",
            "console": "integratedTerminal",
            "env": {
                "SRCARCH": "x86"
            },
            "args": [
                "--src-tree",
                "../linux",
                "--output-tree",
                "../linux/kernel_build",
                "--roots",
                "arch/x86/boot/bzImage",
                "--generate-spdx",
                "--generate-used-files",
                "--package-license",
                "GPL-2.0 WITH Linux-syscall-note",
                "--debug",
                "--prettify-json"
            ]
        }
    ]
}
